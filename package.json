{
  "homepage": "./",
  "name": "quiqr",
  "version": "1.0.0",
  "description": "Sandbox repo for a react frontend, node backend, packaged as an electron app.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && SKIP_PREFLIGHT_CHECK=true NODE_OPTIONS=--openssl-legacy-provider npm run dev",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "devold:frontend-old": "cd frontend && vite",
    "devold": "concurrently  \"npm run dev:backend\" \"npm run dev:electron\"",
    "devold:react": "cross-env APP_ENV=development BROWSERSLIST_IGNORE_OLD_DATA=true BROWSER=none PORT=4001 react-scripts start",
    "buildold:react": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=true react-scripts build"
  },
  "keywords": [],
  "author": "Roy Russo <royrusso@gmail.com> (https://royrusso.com)",
  "license": "MIT",
  "dependencies": {
    "7zip-bin": "3.1.0",
    "adm-zip": "0.4.13",
    "await-spawn": "4.0.1",
    "chokidar": "^3.5.3",
    "classnames": "^2.3.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "deepmerge": "^4.2.2",
    "del": "^6.0.0",
    "electron-progressbar": "^1.2.0",
    "electron-window-state": "^5.0.3",
    "express": "^4.21.2",
    "front-matter": "^4.0.2",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "jimp": "^0.16.1",
    "joi": "13.4.0",
    "js-yaml": ">=3.13.1",
    "jsonfile": "^6.1.0",
    "mkdirp": "0.5.1",
    "node-fetch": "^2.6.11",
    "openai": "^4.64.0",
    "prop-types": "^15.8.1",
    "request": "2.87.0",
    "toml": "2.3.3",
    "tomlify-j0.4": "3.0.0",
    "user-home": "2.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^25.3.0",
    "electron-builder": "^24.6.0"
  },
  "disabledDeps":{
    "nodemon": "^3.1.9"
  },
  "disabledDevDeps":{
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "@babel/core": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "vite": "^6.0.11"
  },
  "build": {
    "appId": "com.example.viteapp",
    "directories": {
      "output": "dist"
    },
    "publish": {
      "provider": "github"
    },
    "files": [
      "dist/**/*",
      "frontend/build/**/*",
      "electron/**/*",
      "backend/**/*",
      "backend/server.js"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
