{
  "name": "react_express_electron",
  "version": "1.0.0",
  "description": "Sandbox repo for a react frontend, node backend, packaged as an electron app.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && vite",
    "dev:backend": "node backend/server.js",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd frontend && npm run build"
  },
  "keywords": [],
  "author": "Roy Russo <royrusso@gmail.com> (https://royrusso.com)",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.7",
    "@babel/preset-react": "^7.26.3",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.1.2",
    "electron": "^25.3.0",
    "electron-builder": "^24.6.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.example.viteapp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "backend/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
